<body>
<div class='card'>
	<div class='card-header'>
		Producto
	</div>
	<div class='card-body'>
		<div class='col-md-12'>
			<div class='col-md-3'>
				<b>Codigo: </b> 	{{ code }}
			</div>	
			<div class='col-md-3'>
				<b>Nombre: </b>	{{ name }}
			</div>
			<div class='col-md-3'>
				<b>Marca: </b>	{{ brand }}
			</div>	
			<div class='col-md-6'>
				<b>Categoria: </b>	{{ category }}
			</div>
			<div class='col-md-6'>
				<b>Detalle: </b>	{{ detail }}
			</div>
			<div class='col-md-3'>
				<b>Precio: </b>	{{ price }}
			</div>				
		</div>
	</div>
	<div class='card-footer'>
		 <a href="{{path('product_delete',{id: id})}}" class="btn btn-danger" onclick="return confirm('Esta seguro?')">
			 {{'Eliminar Producto'|trans}}
			 </a>
			 
			
	 
	</div>
</div>

</body>	
